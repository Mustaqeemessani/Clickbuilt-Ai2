{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "builds": [
    { "src": "main.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "^/api/.*", "dest": "main.py" },
    { "src": "/(.*)", "dest": "main.py" }
  ],
  "functions": {
    "main.py": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}